rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============ CONFIGURACIÓN ============
    // Permitir lectura y escritura de configuración (temporalmente para desarrollo)
    match /configuracion/{docId} {
      allow read, write: if true; // Todos pueden leer y escribir
    }
    
    // ============ ROL SEMANAL ============
    // Permitir lectura y escritura del rol semanal
    match /rol_semanal/{docId} {
      allow read, write: if true;
    }
    
    // ============ PONTONES ============
    // Todos pueden leer y modificar pontones
    match /pontones/{pontonId} {
      allow read, write: if true;
    }
    
    // ============ COLA DE SERVICIO ============
    // Todos pueden leer y escribir en la cola
    match /cola_servicio/{colaId} {
      allow read, write: if true;
    }
    
    // ============ HISTORIAL DE VIAJES ============
    // Todos pueden leer y crear viajes
    match /historial_viajes/{viajeId} {
      allow read, write: if true;
    }
  }
}
